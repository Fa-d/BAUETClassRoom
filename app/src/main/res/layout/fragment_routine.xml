            <Button
                android:background="#A4FFDD00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:rotation="-90"
                android:text="6th"
                android:textSize="10sp"
                android:textStyle="bold" />

            <Button
                android:background="#A4D0FF00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:rotation="-90"
