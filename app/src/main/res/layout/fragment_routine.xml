                android:textSize="10sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/mon_1st"
                android:background="#FCEFC7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
